# ========================
# DATABASE CONFIGURATION
# ========================
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name

# Full database connection string (used in production)
# Syntax: postgresql://USER:PASSWORD@HOST:PORT/DBNAME
DB_URL=postgresql://your_db_user:your_db_password@your_db_host:5432/your_db_name

# ========================
# APPLICATION SETTINGS
# ========================
PORT=3000

# ========================
# AUTHENTICATION & SECURITY
# ========================
# Use long, random strings in production
JWT_SECRET=your_jwt_secret_here
REFRESH_SECRET=your_refresh_secret_here

# ========================
# FRONTEND ORIGINS
# ========================
# For local dev
CORS_ORIGIN=http://localhost:5173
# In production, replace with actual deployed frontend URL
# CORS_ORIGIN=https://yourfrontenddomain.com